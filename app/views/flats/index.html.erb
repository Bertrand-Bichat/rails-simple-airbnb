<div class="container">
  <h1>All our Flats (4)</h1>
  <div class="d-flex justify-content-around align-items-start mt-5">
    <% @flats.each do |flat| %>
    <div class="card m-2">
      <div class="card-header bg-light">
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <div class="d-flex">
          <div class="d-flex">
            <div class="mr-1">
              <i class="las la-user-friends"></i>
            </div>
            <div class="mr-3">
              <p><%= flat.number_of_guests %></p>
            </div>
          </div>
          <div class="d-flex">
            <div class="mr-1">
              <i class="las la-euro-sign"></i>
            </div>
            <div>
              <p><%= flat.price_per_night %></p>
            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="card-body d-flex">
        <div class="mr-2">
          <%= link_to "More info", flat_path(flat) %>
        </div>
        <div class="mr-2">
          <%= link_to "Edit", edit_flat_path(flat), :class => "text-warning" %>
        </div>
        <div>
          <%= link_to "Remove", flat_path(flat),
                :class => "text-danger",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
